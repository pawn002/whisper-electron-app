{
  "name": "whisper-electron-app",
  "version": "1.1.1",
  "description": "Offline Speech-to-Text Electron App with Whisper.cpp",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "tsc -p electron",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run start",
    "dev:electron": "wait-on tcp:4200 && npx electron . --dev",
    "setup": "npm install && npm run install:all && node scripts/setup-whisper.js",
    "install:all": "cd frontend && npm install",
    "build:whisper": "node scripts/build-whisper.js",
    "system-info": "node scripts/system-info.js",
    "build:whisper-variants": "node scripts/build-whisper-variants.js",
    "build:whisper-baseline": "node scripts/build-whisper-variants.js --variant=baseline",
    "build:whisper-avx512": "node scripts/build-whisper-variants.js --variant=avx512",
    "build:whisper-sycl": "node scripts/build-whisper-variants.js --variant=sycl",
    "build:whisper-openvino": "node scripts/build-whisper-variants.js --variant=openvino",
    "benchmark": "node scripts/benchmark-variants.js",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "version:patch": "npm version patch && npm run version:sync",
    "version:minor": "npm version minor && npm run version:sync",
    "version:major": "npm version major && npm run version:sync",
    "version:sync": "node scripts/sync-version.js",
    "release": "npm run version:sync && git push --follow-tags",
    "release:interactive": "node scripts/release.js"
  },
  "keywords": [
    "electron",
    "whisper",
    "speech-to-text",
    "angular"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.yourcompany.whisper-electron",
    "productName": "Whisper Transcription",
    "electronCompile": false,
    "directories": {
      "output": "dist-output"
    },
    "files": [
      "dist/electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "whisper.cpp",
        "to": "whisper.cpp",
        "filter": [
          "**/*",
          "!**/nul",
          "!**/con",
          "!**/prn",
          "!**/aux"
        ]
      },
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "dir"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
